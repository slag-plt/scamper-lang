{
  "name": "scamper-lang",
  "version": "1.5.12",
  "repository": {
    "type": "git",
    "url": "https://github.com/slag-plt/scamper-lang.git"
  },
  "main": "./dist/index.js",
  "bin": {
    "scamper": "./dist/driver/index.js"
  },
  "types": "./dist/index.d.ts",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "mkdir -p dist/web/jzz && cp src/web/jzz/jzz-combined.cjs dist/web/jzz/jzz-combined.cjs && tsc && chmod u+x dist/driver/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint --fix src/",
    "prepare": "npm run build && npm run bundle",
    "driver": "dist/driver/index.js",
    "test": "./run-tests.sh",
    "bundle": "npm run build && node esbuild.config.js",
    "serve": "npm run bundle && npm exec live-server -- --no-browser"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "babel-plugin-prismjs": "^2.1.0",
    "esbuild": "^0.15.6",
    "esbuild-plugin-babel": "^0.2.3",
    "eslint": "^8.17.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-promise": "^6.0.0",
    "jazz-midi": "^1.7.6",
    "live-server": "^1.2.2",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "prismjs": "^1.29.0"
  }
}
